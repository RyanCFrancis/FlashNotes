<?xml version="1.0" encoding="UTF-8"?>

<!-- Root Container -->

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: DBE8F4;" stylesheets="@../../../Template.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Flash Notes top left -->
    <VBox fx:id="vBox" alignment="TOP_RIGHT" layoutX="75.0" layoutY="75.0" prefHeight="450.0" prefWidth="650.0" spacing="20" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 4);" AnchorPane.bottomAnchor="75.0" AnchorPane.leftAnchor="75.0" AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="75.0">
        <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
                <children>
                    <Text fx:id="FlashNotes" strokeType="OUTSIDE" strokeWidth="0.0" text="FlashNotes">
                        <font>
                            <Font name="Inter Regular" size="6.0" />
                        </font>
                    </Text>
                    <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="23.0" prefWidth="542.0">
                        <children>
                            <Text fx:id="home" strokeType="OUTSIDE" strokeWidth="0.0" text="home">
                                <font>
                                    <Font name="Inter Regular" size="12.0" />
                                </font>
                            </Text>
                            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="60.0" prefWidth="22.0" />
                            <ImageView fx:id="menuIcon" fitHeight="18.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@Images/MenuIcon.png" />
                                </image>
                            </ImageView>
                        </children>
                    </HBox>
                </children>
            </HBox>

        <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="323.0" prefWidth="577.0">
        <children>

            <!-- Card -->
            <StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="192.0" prefWidth="587.0">
                <children>
                    <Rectangle fx:id="card" arcHeight="28.0" arcWidth="28.0" fill="#4da0ff" height="200.0" stroke="TRANSPARENT" strokeType="INSIDE" strokeWidth="0.0" width="300.0">
                        <effect>
                            <DropShadow color="gray" offsetX="5" offsetY="5" radius="10" />
                        </effect>
                    </Rectangle>

                    <!-- Card Label -->
                    <Label fx:id="cardLabel" alignment="CENTER" prefHeight="200.0" prefWidth="300.0" textFill="black">
                        <font>
                            <Font name="Roboto Medium" size="30.0" />
                        </font>
                    </Label>
                </children>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </StackPane>

            
               <StackPane alignment="TOP_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="453.0" prefWidth="439.0">
               <children>

                   <!-- Option 1 Card -->
                   <Rectangle fx:id="optionOneCard" arcHeight="28.0" arcWidth="28.0" fill="#4da0ff" height="150.0" width="200.0">
                       <effect>
                           <DropShadow color="gray" offsetX="5" offsetY="5" radius="10" />
                       </effect>
                   </Rectangle>
                     <StackPane alignment="BOTTOM_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="326.0" prefWidth="246.0">
                             <children>

                                 <!-- Option 2 Card -->
                                 <Rectangle fx:id="optionTwoCard" arcHeight="28.0" arcWidth="28.0" fill="#4da0ff" height="150.0" width="200.0">
                                     <effect>
                                         <DropShadow color="gray" offsetX="5" offsetY="5" radius="10" />
                                     </effect>
                                 </Rectangle>

                                 <!-- Option 2 Label -->
                           <Label fx:id="option2Label" alignment="CENTER" prefHeight="150.0" prefWidth="200.0" StackPane.alignment="BOTTOM_RIGHT" />
                             </children>
                     </StackPane>

                   <!-- Option 1 Label -->
                     <Label fx:id="option1Label" alignment="CENTER" prefHeight="150.0" prefWidth="200.0">
                             <font>
                                 <Font name="Roboto Medium" size="15" />
                             </font>
                     </Label>
               </children>
               </StackPane>
        </children>
        </HBox>
         <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="39.0" prefWidth="144.0">
            <children>
   
               <!-- Delete button -->
               <StackPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="57.0" prefWidth="200.0">
                  <children>
                       <Rectangle fx:id="nextCardButton" arcHeight="40.0" arcWidth="40.0" fill="#BA43FF" height="34.0" width="88.0" />
                       <Label text="Next Card" textFill="black">
                           <font>
                               <Font size="16.0" />
                           </font>
                       </Label>
                  </children>
               </StackPane>
            </children>
         </HBox>
        </children>
    </VBox>
</AnchorPane>
