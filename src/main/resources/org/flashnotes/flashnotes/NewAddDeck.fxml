<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.flashnotes.flashnotes.View.AddDeckController">
   <children>
      <Label text="Add Deck">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <TextField fx:id="nameOfDeck" maxWidth="300.0" promptText="Name of Deck" />
      <TextField fx:id="Category" maxWidth="300.0" promptText="Category" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0">
         <children>
            <Button fx:id="createDeckbutton" mnemonicParsing="false" onAction="#createDeck" text="Create Deck" />
            <Button fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#returnBack" text="Cancel" textAlignment="CENTER" />
         </children>
      </HBox>
   </children>
</VBox>
